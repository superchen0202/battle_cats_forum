<h1 class="title has-text-info">最近貓友們都在看...</h1>

<!-- upside -->
<section class="columns">
        
    <!-- left --> 
    <section class="column">
        
        <h2 class="title is-3"><%= @top1.title %></h2>
        
        <article>

            <% if @top1.cover_img.attached? %>
                <figure class="media-right"><%= image_tag @top1.cover_img.variant( resize: "150 x 150"), class: "cover-img" %></figure>
            <% end %>
            
            <p class="title is-5"><%= strip_tags(@top1.content).truncate(75) %></p>
            
            <footer>
                <p class="has-text-grey-dark"><%= @top1.user.username %></p>
                <p><%= @top1.created_at %></p> 
            </footer>
            
        </article>

    </section>
  

    <!-- middle_left -->
    <section class="column">

        <!-- Article 1 -->
        <article class="media">
        
        <% if @top2.cover_img.attached? %>
                <figure class="media-right"><%= image_tag @top2.cover_img.variant( resize: "150 x 150"), class: "cover-img" %></figure>
        <% end %>

        <div class="media-content">
            <h2 class="title is-3"><%= @top2.title %></h2>
            
            <p><%= strip_tags(@top2.content).truncate(50) %></p>

            <footer>
                <p><%= @top2.user.username %></p>
                <p><%= @top2.created_at %></p>
            </footer>
        </div>
        </article>

        <!-- Article 2 -->
        <article class="media">
        
        <% if @top3.cover_img.attached? %>
            <figure class="media-right"><%= image_tag @top3.cover_img.variant( resize: "150 x 150"), class: "cover-img" %></figure>
        <% end %>

        <div class="media-content">
            <h2 class="title is-3"><%= @top3.title %></h2>
            
            <p"><%= strip_tags(@top3.content).truncate(50) %></p>

            <footer>
                <p><%= @top3.user.username %></p>
                <p><%= @top3.created_at %></p>
            </footer>
        </div>
        </article>

    </section>

