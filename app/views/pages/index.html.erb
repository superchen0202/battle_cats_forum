<!-- bottom -->
<section class="columns">

    <!-- article list_left class="column is-two-thirds"-->
    <section class="column">

        <% @stories.each do |story| %>

        <article class="media">

            <% if story.cover_img.attached? %>
                <figure class="media-right"><%= image_tag story.cover_img.variant( resize: "250 x 250"), class: "cover-img" %></figure>
            <% end %>

            <div class="media-content">
                <h2 class="title is-4 has-text-primary"><%= link_to story.title, story_page_path(story.user.username, story), class: "has-text-grey-dark" %></h2>
                <p class="content"><%= strip_tags(story.content).truncate(150) %></p>
                <footer><p><%= link_to story.user.username, user_page_path(story.user.username), class: "has-text-grey-dark" %> | <%= story.created_at %></p></footer>
            </div>

        </article>
        <% end %>
    </section>

