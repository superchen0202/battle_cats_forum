<h2 class ="title">登入</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :email %><br />

    <div class="control">
      <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password %><br />

    <div class="control">
     <%= f.password_field :password, class: "input",  autocomplete: "current-password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <div class="control">
      <%= f.submit "登入", class: "button is-primary" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>